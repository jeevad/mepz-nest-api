<html lang='en'>
<head>
  <meta charset='utf-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1' />
  <title>{{title}}</title>
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet'
    integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous'
  />
   <style>
    .page-break {
      page-break-before: always;
    }
  </style>
</head>
<body>
  <div class='container-fluid mb-5 mt-0'>
    <div class='row d-flex align-items-baseline'>
      <div class='col-xl-12'>
        
       
        {{#each equipments }}
           {{#if ../pagewise}}{{#index_gt @index}}<div class="page-break"></div> {{/index_gt}}{{/if}} 
         

          <p style='color: #242729;font-size: 16px; margin-bottom: 5px;'><b> Item Code:</b> <span>{{code}}</span> <span style="margin-left:30px;">{{name}}</span></p>
          
          <p style='color: #242729;font-size: 16px; margin-bottom: 5px;'><b> Item Description:</b> <span>{{code}}</span> <span style="margin-left:30px;">{{name}}</span></p>

          <table class='table table-bordered' style="font-size: 15px; margin-bottom:20px;">
            <thead class='table-light'>
              <tr>
                <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Proposed Brand:</th>
                <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Model:</th>
                <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Country of Origin:</th>
                
              </tr>
            </thead>
            <tbody>      
              {{#each locations as |data|}}
                <tr>
                  <td style="padding-top:6px;padding-bottom:6px">{{data.department.code}}</td>
                  <td style="padding-top:6px;padding-bottom:6px">{{data.department.name}}</td>
                  <td style="padding-top:6px;padding-bottom:6px">{{data.room.code}}</td>
                </tr>      
              {{/each}}
                <tr style="border: 0;">
                  <td style="border:0;"></td>
                  <td style="border:0;"></td>
                  <td style="border:0;"></td>
        
                </tr>
            </tbody>
          </table>
        {{/each}}
        <p style="text-align:right; margin-bottom:0px; color: #242729;"><b>Total Equipment : {{ calculateSumOfTotalEquipmentLocationListing equipments }}</b></p>
      </div>
    </div>
  </body>
</html>